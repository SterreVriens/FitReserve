{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fit-reserve/backend/dto": ["libs/backend/dto/src/index.ts"],
      "@fit-reserve/backend/features": [
        "libs/backend/features/user/src/index.ts"
      ],
      "@fit-reserve/backend/features/auth": [
        "libs/backend/features/auth/src/index.ts"
      ],
      "@fit-reserve/backend/features/auth/decorator": [
        "libs/backend/features/auth/src/lib/decorator/public.decorator.ts"
      ],
      "@fit-reserve/backend/features/enrollment": [
        "libs/backend/features/enrollment/src/index.ts"
      ],
      "@fit-reserve/backend/features/progress": [
        "libs/backend/features/progress/src/index.ts"
      ],
      "@fit-reserve/backend/features/recommendation": [
        "libs/backend/features/recommendation/src/index.ts"
      ],
      "@fit-reserve/backend/features/training": [
        "libs/backend/features/training/src/index.ts"
      ],
      "@fit-reserve/decorators": [
        "libs/backend/features/user/src/lib/decorators/public.decorater"
      ],
      "@fit-reserve/fit-reserve/common": [
        "libs/fit-reserve/common/src/index.ts"
      ],
      "@fit-reserve/fit-reserve/features": [
        "libs/fit-reserve/features/src/index.ts"
      ],
      "@fit-reserve/footer": [
        "libs/fit-reserve/ui/src/lib/footer/src/index.ts"
      ],
      "@fit-reserve/shared/api": ["libs/shared/api/src/index.ts"],
      "@fit-reserve/static": ["libs/fit-reserve/static/src/index.ts"],
      "@fit-reserve/ui": ["libs/fit-reserve/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
